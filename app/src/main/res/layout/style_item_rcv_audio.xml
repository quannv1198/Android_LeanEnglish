<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="110dp"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/background_item_rcv"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <LinearLayout
            android:background="@drawable/custom_bg_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">
                <TextView
                    android:textSize="30dp"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="@android:color/holo_orange_light"
                    android:id="@+id/tv_item_rcv_audio"
                    android:padding="2dp"
                    android:layout_width="85dp"
                    android:layout_height="60dp" />
                <TextView
                    android:background="@drawable/backgroun_types_video"
                    android:layout_width="85dp"
                    android:layout_height="60dp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_name_item_rcv_audio"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textSize="10dp"
                    android:text="name audio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"/>
                <ImageView
                    android:id="@+id/imv_item_rcv_menu"
                    android:padding="5dp"
                    android:src="@drawable/ic_action_menu_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:paddingRight="5dp"
                android:textColor="@color/colorPrimary"
                android:gravity="end|center"
                android:text="Listen"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>